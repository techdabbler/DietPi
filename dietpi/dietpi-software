			sed -i "/'mysqli_password'/c \$cfg[\'mysqli_password\']                 = \'$GLOBAL_PW\';" /var/www/ompd/include/config.inc.php
			sed -i "/'media_dir'/c \$cfg[\'media_dir\']                 = \'$FP_DIETPI_USERDATA_DIRECTORY/Music/\';" /var/www/ompd/include/config.inc.php

