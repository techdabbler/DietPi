[Service]
Type=forking
User=root
WorkingDirectory=$FP_DIETPI_USERDATA_DIRECTORY/nzbget
ExecStart=$FP_DIETPI_USERDATA_DIRECTORY/nzbget/nzbget -D

[Install]
